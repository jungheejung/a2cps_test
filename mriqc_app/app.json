{
  "name": "wma_prtl-{{ app.name }}",
  "version": "{{ app.version }}",
  "executionType": "HPC",
  "executionSystem": "{{ app.hpc_system}}",
  "parallelism": "SERIAL",
  "deploymentPath": "apps/{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "{{ app.storage_system}}",
  "defaultProcessorsPerNode": 1,
  "defaultNodeCount": 1,
  "defaultQueue": "normal",
  "label": "MRIQC",
  "modules": ["load tacc-singularity"],
  "shortDescription": "{{ app.description }}",
  "templatePath": "runner-template.sh",
  "testPath": "tester.sh",
  "inputs": [],
  "parameters": [{
      "id": "CONTAINER_IMAGE",
      "value": {
        "default": "{{ docker.organization }}/{{ docker.repo }}:{{ docker.tag }}",
        "description": "Container Image. Do not edit.",
        "type": "string",
        "visible": false,
        "required": true
      }
    },
    {
      "id": "BIDS_DIRECTORY",
      "value": {
        "default": "agave://a2cps.storage.public/a2cps_openneuro_testdata/",
        "visible": true,
        "required": true
      },
      "semantics": {
        "ontology": [
          "https://bids.neuroimaging.io/specification.html"
        ]
      },
      "details": {
        "label": "BIDS_DIRECTORY",
        "description": "The root folder of a BIDS valid dataset (sub-XXXXX folders should be found at the top level in this folder)."
      }
    },
    {
      "id": "PARTICIPANT_LABEL",
      "value": {
        "default": "01",
        "type": "string",
        "visible": true,
        "required": false
      },
      "details": {
        "description": "A space delimited list of participant identifiers or a single identifier (the sub- prefix can be removed)",
        "showArgument": false,
        "argument": "participant --participant_label "
      }
    },


    {
      "id": "START_IDX",
      "details": {
        "argument": "--start-idx ",
        "showArgument": true,
        "description": "Initial volume that should be considered for preprocessing"
      },
      "value": {
        "default": null,
        "type": "number",
        "visible": true,
        "required": false
      }
    },

    {
      "id": "STOP_IDX",
      "details": {
        "argument": "--stop-idx ",
        "showArgument": true,
        "description": "Final volume that should be considered for preprocessing"
      },
      "value": {
        "default": null,
        "type": "number",
        "visible": true,
        "required": false
      }
    },


    {
      "id": "WRITE_GRAPH",
      "details": {
        "argument": "--write-graph ",
        "showArgument": true,
        "description": "Run ICA on the raw data and include the componentsin the individual reports (slow but potentially very insightful)"
      },
      "value": {
        "default": true,
        "description": "add ICA_AROMA to your preprocessing stream",
        "type": "flag",
        "visible": true,
        "required": false
      }
    },
    {
      "id": "ICA",
      "details": {
        "argument": "--ica ",
        "showArgument": true,
        "description": "Run ICA on the raw data and include the componentsin the individual reports (slow but potentially very insightful)"
      },
      "value": {
        "default": true,
        "description": "add ICA_AROMA to your preprocessing stream",
        "type": "flag",
        "visible": true,
        "required": false
      }
    },


    {
  "id": "FD_THRESHOLD",
  "details": {
    "argument": "--fd_thres ",
    "showArgument": true,
    "description": "motion threshold for FD computation"
  },
  "value": {
    "default": null,
    "type": "number",
    "visible": true,
    "required": false
  }

},
    {
      "id": "FFT_SPIKES",
      "details": {
        "argument": "--fft-spikes-detector ",
        "showArgument": true,
        "description": "Turn on FFT based spike detector (slow)."
      },
      "value": {
        "default": true,
        "description": "Turn on FFT based spike detector (slow).",
        "type": "flag",
        "visible": true,
        "required": false
      }
    },

    {
      "id": "CORRECT_SLICE_TIMING",
      "details": {
        "argument": "--correct-slice-timing ",
        "showArgument": true,
        "description": "Perform slice timing correction"
      },
      "value": {
        "default": true,
        "description": "Perform slice timing correction",
        "type": "flag",
        "visible": true,
        "required": false
      }
    },

    {
      "id": "WORK_DIR",
      "value": {
        "default": "work",
        "description": "the output path for the outcomes of preprocessing and visual reports",
        "type": "string",
        "visible": true,
        "required": true
      }
    },

    {
      "id": "OUTPUT_DIR",
      "value": {
        "default": "outputs",
        "description": "the output path for the outcomes of preprocessing and visual reports",
        "type": "string",
        "visible": true,
        "required": true
      }
    }
  ]
}
